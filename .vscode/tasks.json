{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Remove Existing Wasm",
      "type": "shell",
      "command": "rm",
      "options": {
        "cwd": "${workspaceRoot}/public"
      },
      "args": [
        "index.js",
        "index.wasm"
      ]
    },
    {
      "label": "Build WebAssembly",
      "type": "shell",
      "command": "emcc",
      "args": [
        "--bind",
        "src/board.cpp",
        "src/piece.cpp",
        "src/main.cpp",
        "-std=c++14",
        "-s",
        "WASM=1",
        "-s",
        "USE_SDL=2",
        "-s",
        "MODULARIZE=1",
        "-O3",
        "-o",
        "public/index.js"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "new"
      },
      "problemMatcher": [],
      "dependsOn": ["Remove Existing Wasm"]
    },
    {
      "label": "Remove Build Folder",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "./build"]
    },
    {
      "label": "Create Build Folder",
      "type": "shell",
      "command": "mkdir",
      "args": ["./build"],
      "dependsOn": ["Remove Build Folder"]
    },
    {
      "label": "CMake Config",
      "type": "shell",
      "command": "cmake",
      "args": ["./", "-Bbuild"],
      "dependsOn": ["Create Build Folder"]
    },
    {
      "label": "Build Executable",
      "type": "shell",
      "command": "make",
      "dependsOn": ["CMake Config"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceRoot}/build"
      }
    },
    {
      "label": "Start Executable",
      "type": "shell",
      "command": "./Tetris",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceRoot}/build"
      }
    }
  ]
}
